%html
  %head
    %title makevoid's RubyMotion log
    %meta{ charset: "utf-8" }
    %meta{ :"http-equiv" => "X-UA-Compatible", content: "IE=edge" }
    %link{ href: "/css/main.css", rel: "stylesheet" }
    %meta{ name: "viewport", content: "width=device-width, initial-scale=1.0" }
    %meta{ name: "description", content: "A blog (based mostly on small gists) on my journey into the magical world of RubyMotion!" }
    %meta{ name: "keywords", content: "rubymotion, iphone, ruby, blog, resources, journey" }    
    %meta{ name: "author", content: "Francesco 'makevoid' Canessa" }
  %body
    #container
      %header
        %h1
          %span
            - link_to "makevoid", "http://makevoid.com"
            's
          - link_to "RubyMotion log", "/"
      %nav
      %section.content= yield
  %script{ src: "/js/vendor/zepto.js", type: "text/javascript" }
  %script{ type: "text/javascript", src: "/js/app.js" }